@startuml
!theme toy

entity "Produto" {
    * id: Long
    --
    nome: String
    descricao: String
    preco: Double
    estoque: int
    ativo: boolean
    dataCriacao: Date
    dataModificacao: Date
    --
    criarProduto()
    atualizarProduto()
    ativarProduto()
    desativarProduto()
    buscarProduto()
    buscarTodosProdutos()
    buscarProdutosAtivos()
    buscarProdutosInativos()
}

entity "Venda" {
    * id: Long
    --
    data: Date
    total: Double
    --
    adicionarVenda()
    verVenda()
    atualizarVenda()
    excluirVenda()
    relatorioVenda()
}

entity "VendaProduto" {
    * vendaId: Long
    * produtoId: Long
    --
    quantidade: int
}

Produto ||--o{ VendaProduto: contém
Venda ||--o{ VendaProduto: contém

@enduml